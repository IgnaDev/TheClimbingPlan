<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocolor"
    android:orientation="vertical"
    tools:context=".Activities.MenuHistorico">

    <LinearLayout
        android:id="@+id/linearHist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvCategoriaHist"
            style="@style/MyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_weight="1"
            android:text="@string/categoria"
            android:textColor="#8C9EFF" />

        <Spinner
            android:id="@+id/spinnerCategoriaSesionHist"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/tvSesionHist"
            style="@style/MyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_weight="1"
            android:text="@string/sesi_n_de_enternamiento"
            android:textColor="#B39DDB" />

        <Spinner
            android:id="@+id/spinnerSesionHist"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnHist"
            style="@style/DarkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Consultar"
            android:visibility="visible"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <TextView
            android:id="@+id/textView5"
            style="@style/MyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_weight="1" />

    </LinearLayout>
    </LinearLayout>